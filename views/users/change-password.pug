extends ../application.pug
block content
	.container
		.row
			.col-xs-8.offset-xs-2
				h3 Put your new password here:
				form(action= "/change-password/"+ user.passwordResetToken  method= "POST")
					.form-group
						label(for="") New password:
						input(type="" class="form-control" name="password" required )
					.form-group
						button(type="submit" class="btn btn-success") Submit
