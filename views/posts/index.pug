extends ../application.pug
block content

	each post in posts
		.container
			.card.card-block
				.row
					.col-xs-6.offset-xs-2
						a(href="/"+post.id)
							h3= post.title
						h2= post.slug
						p= post.content
					.col-xs-1.offset-xs-0

						a( href='/admin/posts/edit/'+ post.id  class="btn btn-warning" ) Edit
					.col-xs-1.offset-xs-0
						form(action="/admin/posts/" + post.id method="POST")
							input(type="hidden" name="_method" value="DELETE")
							button(type="submit" class="btn btn-danger btn-block" data-post=post.id) Delete
