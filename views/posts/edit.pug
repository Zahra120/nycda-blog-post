extends ../application.pug
block content

	.container
		.row
			.col-xs-8.offset-xs-2
				form(action= "/admin/posts/"+ post.id method="POST" )
					input(type="hidden" name="_method" value="PUT")
					.form-group
						label(for="")  Title
						input(type="" class="form-control" name="title" value=post.title)
					.form-group
						label(for="")  Slug
						input(type="" class="form-control" name="slug" value=post.slug)
					.form-group
						label(for="exampleTextarea") Content
						textarea(class="form-control" id="exampleTextarea" rows="10" name="content")= post.content
					button(type="submit" class="btn btn-success" ) Submit
